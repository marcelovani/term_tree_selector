{#
/**
 * @file
 * Term Tree Selector.
 */
#}
{% if description %}
  <div class="description">{{ description }}</div>
{% endif %}
<form class="term-tree-selector" data-vocabulary="{{ vocabulary }}" data-level="{{ leaf_level }}" data-autosubmit="{{ autosubmit }}">
    <select name="root">
        <option>Select {{ root_label }}</option>
    </select>
    <select name="leaf">
        <option>Select {{ leaf_label }}</option>
    </select>
    <button name="submit">{{ submit_label }}</button>
</form>
